<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="org.ritesh.hibernate.domain.Customer" table="customer_aspire">
		<id name="customer_id" column="customer_id" type="integer">
			<generator class="increment" />
		</id>
		<property name="name" type="string" column="customer_name"
			length="30">
		</property>
		<property name="address" type="string" column="customer_address"
			length="100"></property>
		<property name="phoneNo" type="long" column="customer_phone"></property>
	</class>
</hibernate-mapping>